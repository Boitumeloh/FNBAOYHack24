<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Business Registration | Township Micro-Investment Platform</title>
  <link rel="stylesheet" href="/styles.css" />
  <link
    rel="stylesheet"
    href="https://cdn-uicons.flaticon.com/2.6.0/uicons-bold-straight/css/uicons-bold-straight.css"
  />
</head>
<body>
  <!-- Navigation Bar -->
  <header class="navbar">
    <a href="/"><h1 class="logo"><i class="fi fi-bs-square-m"></i>Makhie</h1></a>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/register">User Register</a></li>
        <li><a href="/login">Login</a></li>
      </ul>
    </nav>
  </header>

  <!-- Business Registration Container -->
  <div class="register-container">
    <h1>Register Your Business</h1>
    <form id="businessForm" class="register-form" method="POST" action="/api/businesses" enctype="multipart/form-data">
      <!-- Business Name -->
      <div class="form-group">
        <label for="business_name">Business Name*</label>
        <input 
          type="text" 
          id="business_name" 
          name="business_name" 
          placeholder="Enter your business name" 
          required 
        />
      </div>

      <!-- Industry -->
      <div class="form-group">
        <label for="industry">Industry*</label>
        <select id="industry" name="industry" required>
          <option value="">Select Industry</option>
          <option value="Technology">Technology</option>
          <option value="Retail">Retail</option>
          <option value="Food">Food & Beverage</option>
          <option value="Healthcare">Healthcare</option>
          <option value="Education">Education</option>
          <option value="Other">Other</option>
        </select>
      </div>

      <!-- Funding Goal -->
      <div class="form-group">
        <label for="funding_goal">Funding Goal (R)*</label>
        <input 
          type="number" 
          id="funding_goal" 
          name="funding_goal" 
          placeholder="Enter funding goal" 
          min="0"
          required 
        />
      </div>

      <!-- Benefit -->
      <div class="form-group">
        <label for="benefit">Benefit*</label>
        <textarea 
          id="benefit" 
          name="benefit" 
          placeholder="Describe what contributors will receive in return" 
          required
          rows="4"
          cols="48"
        ></textarea>
      </div>

      <!-- Time Span -->
      <div class="form-group">
        <label for="time_span">Funding Time Span*</label>
        <input 
          type="text" 
          id="time_span" 
          name="time_span" 
          placeholder="By when will you need funding? (e.g., 6 months)" 
          required 
        />
      </div>

      <!-- Location -->
      <div class="form-group">
        <label for="location">Business Location*</label>
        <input 
          type="text" 
          id="location" 
          name="location" 
          placeholder="Enter your business location" 
          required 
        />
      </div>

      <!-- Business Image -->
      <div class="form-group">
        <label for="image">Business Image*</label>
        <input 
          type="file" 
          id="image" 
          name="image" 
          accept="image/*"
          required
        />
        <small>Upload an image to represent your business</small>
      </div>

      <!-- Description -->
      <div class="form-group">
        <label for="description">Description*</label>
        <textarea 
          id="description" 
          name="description" 
          placeholder="Describe your business in detail (required)"
          required
          rows="4"
          cols="48"
        ></textarea>
      </div>

      <button type="submit" class="cta-button">Register Business</button>
    </form>
  </div>

  <script src="/scripts/businessRegister.js"></script>
  <script src="/scripts/protectPage.js"></script> <!-- For login protection -->
</body>
</html>